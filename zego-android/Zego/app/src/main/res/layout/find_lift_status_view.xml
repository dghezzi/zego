<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <it.sharethecity.mobile.letzgo.customviews.TipSelectorView
        android:id="@+id/tip_selector_view"
        android:visibility="gone"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_above="@+id/info_ride_view"
        android:layout_width="match_parent"
        app:layout_heightPercent="16%"/>

    <it.sharethecity.mobile.letzgo.customviews.InfoRideView
        android:id="@+id/info_ride_view"
        android:visibility="gone"
        android:layout_above="@+id/pickup_dropoff_view"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"/>

    <it.sharethecity.mobile.letzgo.customviews.StartStopView
        android:id="@+id/pickup_dropoff_view"
        android:layout_marginBottom="15dp"
        android:layout_above="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <it.sharethecity.mobile.letzgo.customviews.MyFakeToastView
        android:id="@+id/toast_view_msg"
        android:visibility="gone"
        android:layout_above="@+id/tip_selector_view"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/confirm_button"
        android:background="@drawable/green_button_selector"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:text="@string/enter_destination"
        android:textAllCaps="false"
        android:textSize="@dimen/button_text_size"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</merge>