<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_splash"
    tools:context="it.sharethecity.mobile.letzgo.activities.EntryActivity">

  <!--<ImageView-->
  <!--android:layout_width="match_parent"-->
  <!--android:layout_height="match_parent"-->
  <!--android:scaleType="centerCrop"-->
  <!--android:src="@drawable/sfondo_login"/>-->

  <ImageView
      android:id="@+id/logo"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="fitCenter"
      app:layout_marginLeftPercent="20%"
      app:layout_marginRightPercent="20%"
      app:layout_marginTopPercent="15%"
      app:layout_marginBottomPercent="45%"
      android:src="@drawable/logo_login"/>

  <LinearLayout
      android:id="@+id/buttons_layout"
      android:layout_alignParentBottom="true"
      android:orientation="horizontal"
      android:weightSum="2"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginBottom="30dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <Button
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:layout_marginRight="4dp"
        android:background="@drawable/white_button_with_stroke_selector"
        android:textColor="@color/green_zego"
        android:text="@string/login"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:layout_marginLeft="4dp"
        android:textSize="@dimen/button_text_size"
        android:textStyle="bold"
        android:background="@drawable/green_button_selector"
        android:textColor="@android:color/white"
        android:text="@string/signup"/>

  </LinearLayout>

</android.support.percent.PercentRelativeLayout>
