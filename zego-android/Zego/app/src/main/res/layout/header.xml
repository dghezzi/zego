<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="horizontal"
  android:layout_width="match_parent"
  android:layout_weight="3"
  android:layout_height="50dp">

  <ImageButton
    android:id="@+id/back_button"
    android:layout_width="30dp"
    android:layout_marginLeft="10dp"
    android:background="@android:color/transparent"
    android:layout_centerVertical="true"
    android:layout_height="30dp"
    android:scaleType="fitCenter"
    android:src="@drawable/back"/>

  <it.sharethecity.mobile.letzgo.customviews.BoldRelewayTextView
    android:id="@+id/title_text_view"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_height="match_parent"
    android:textColor="@android:color/black"
    android:gravity="center_vertical"
    android:textSize="@dimen/title_text_view_size"
    android:layout_toRightOf="@+id/back_button"
    android:layout_toLeftOf="@+id/right_text_view"
    tools:text="Avanti"/>

  <TextView
    android:id="@+id/right_text_view"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:layout_centerVertical="true"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginRight="10dp"
    android:textSize="@dimen/text_right_size_header"
    android:layout_alignParentRight="true"
    android:textColor="@color/green_zego"
    tools:text="Avanti"
    />

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_alignParentBottom="true"
    android:background="@android:color/black"/>


</RelativeLayout>
