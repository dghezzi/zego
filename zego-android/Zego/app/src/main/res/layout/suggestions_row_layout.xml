<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"

    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    xmlns:Font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/indicator_img_view"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:src="@drawable/puntogrigio"/>

    <RelativeLayout
        android:id="@+id/row_suggestion"
        android:layout_toRightOf="@+id/indicator_img_view"
        android:layout_toLeftOf="@+id/edit_img_view"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <it.sharethecity.mobile.letzgo.customviews.MyFontTextView
            android:id="@+id/first_label_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/suggestion_text_size"
            Font:customfont="Raleway-Regular.ttf"
            tools:text = "via del romito 10"
            />

        <it.sharethecity.mobile.letzgo.customviews.MyFontTextView
            android:layout_below="@+id/first_label_text_view"
            android:id="@+id/second_label_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="15sp"
            Font:customfont="Raleway-Regular.ttf"
            tools:text = "via del romito 10"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/edit_img_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/pen"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_text"/>

</RelativeLayout>